<header class="page-header">
  <h1 class="page-header__heading">{{ header.heading if header.heading else title }}</h1>
  {% if date %}
    <time class="page-header__date" datetime="{{ date | machineDate }}">{{ date | humanDate }}</time>
  {% endif %}
  {% if header.blurb %}
    <div class="page-header__blurb">
      {{ header.blurb | markdownify | safe }}
    </div>
  {% endif %}
</header>
