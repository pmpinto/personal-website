{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "Personal website of Pedro Pinto: https://pedropinto.me",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all sass --parallel watch:*",
    "build": "npm-run-all build:*",
    "sass": "sass --style=compressed --color src/assets/scss/styles.scss src/assets/css/styles.css",
    "eleventy": "npx @11ty/eleventy",
    "build:eleventy": "npm run eleventy",
    "build:sass": "npm run sass -- --stop-on-error",
    "watch:eleventy": "rm -rf dist && npx @11ty/eleventy --serve --watch",
    "watch:sass": "npm run sass -- --watch"
  },
  "keywords": [
    "personal",
    "website",
    "portfolio",
    "design",
    "photography",
    "web development"
  ],
  "author": "Pedro Pinto",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0"
  },
  "dependencies": {
    "sass": "^1.32.5"
  }
}
