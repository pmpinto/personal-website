{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "Personal website of Pedro Pinto: https://pedropinto.me",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "clean": "rm -rf dist",
    "eleventy": "npx @11ty/eleventy",
    "esbuild": "esbuild src/assets/javascript/scripts.js --bundle --outfile=src/static_assets/javascript/bundle.js",
    "sass": "sass --style=compressed --color src/assets/scss/styles.scss src/static_assets/css/styles.css",
    "start": "npm-run-all sass esbuild --parallel watch:*",
    "build:eleventy": "npm run eleventy",
    "build:esbuild": "npm run esbuild -- --minify",
    "build:sass": "npm run sass -- --stop-on-error",
    "watch:eleventy": "npm run clean && npm run eleventy -- --serve --port=8080",
    "watch:esbuild": "npm run esbuild -- --watch --sourcemap",
    "watch:sass": "npm run sass -- --watch",
    "photographer:create-from-photos": "node ./scripts/photographer-entry-from-photo.js"
  },
  "keywords": [
    "personal",
    "website",
    "portfolio",
    "design",
    "photography",
    "web development"
  ],
  "author": "Pedro Pinto",
  "license": "ISC",
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.8.46",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "npm-run-all": "^4.1.5",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0"
  },
  "dependencies": {
    "exif": "^0.6.0",
    "imagesloaded": "^4.1.4",
    "infinite-scroll": "^4.0.1",
    "isotope-layout": "^3.0.6",
    "markdown-it-classy": "^0.2.0",
    "normalize.css": "^8.0.1",
    "sass": "^1.32.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
